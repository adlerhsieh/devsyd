<div class="single-post">
  <div class="inner-container">
    <div class="title">
      <h2><%= @post.title %></h2>
    </div>

    <div class="author">
      <a href="<%= user_path(@post.user) %>">
        <%= @post.user.fullname %>
      </a>
      <span class="datetime"> @ <%= @post.created_at.strftime("%Y-%m-%d") %></span>
    </div>

    <div class="content">
      <%= @post.content %>
    </div>
  </div>
</div>
