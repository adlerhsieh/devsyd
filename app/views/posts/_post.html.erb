<div class="single-post">
  <div class="title">
    <h2><%= post.title %></h2>
  </div>

  <div class="author">
    <a href="<%= user_path(post.user) %>">
      <%= post.user.fullname %>
    </a>
  </div>
  <span class="datetime">
    <%= post.created_at.strftime("%Y-%m-%d") %>
  </span>

  <hr />
  <div class="content">
    <%=raw post.content_html %>
  </div>
</div>
